<!-- Form -->
<h3>Move a disk from a tower to another tower</h3>
<hr>
<form class="form" action="move" method="post">
  <div class="form-group">
    <label for="from">From</label>
    <input id="from" type="text" name="from" class="form-control">
  </div>
  <div class="form-group">
    <label for="to">To</label>
    <input id="to" type="text" name="to" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary" <%= "disabled" if tower_of_hanoi.win?%>>Submit</button>
</form>
